// app global css in Stylus form
@font-face {
  font-family: 'Nunito', sans-serif;
  src: url(./fonts/nunito/Nunito-Regular.ttf);
}
.app-toolbar {
  top: 0;
  right: 0;
  left: 0;
  height 80px
  box-shadow: 0 1px 15px rgba(0, 0, 0, .04), 0 1px 6px rgba(0, 0, 0, .04)
  background-color: #fff;
  padding auto 0
}


